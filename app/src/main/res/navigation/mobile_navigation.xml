<?xml version="1.0" encoding="utf-8"?>
    <navigation  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

<fragment
    android:id="@+id/navigation_dashboard"
    android:name="com.example.shopapp.fragments.DashboardFragment"
    android:label="@string/title_dashboard"
    tools:layout="@layout/dashboard_fragment" />

<fragment
android:id="@+id/navigation_products"
android:name="com.example.shopapp.fragments.ProductFragment"
android:label="@string/title_products"
tools:layout="@layout/product_fragment" />

<fragment
android:id="@+id/navigation_orders"
android:name="com.example.shopapp.fragments.OrdersFragment"
android:label="@string/title_orders"
tools:layout="@layout/orders_fragment"/>

    <fragment
        android:id="@+id/navigation_sold_product"
        android:name="com.example.shopapp.fragments.SoldProductFragment"
        android:label="@string/title_sold_products"
        tools:layout="@layout/fragment_sold_product"/>
    </navigation>